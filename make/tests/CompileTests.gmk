		$(TESTDIR)/javatest/regtest/data/compilejdk/ShellTest.sh
	fgrep 'COMPILEJAVA=$(JDK15HOME)' $(@:%.ok=%)/work/ShellTest.jtr
	fgrep 'TESTJAVA=$(JDK16HOME)' $(@:%.ok=%)/work/ShellTest.jtr
